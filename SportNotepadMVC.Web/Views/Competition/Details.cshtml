@model SportNotepadMVC.Application.ViewModels.Competition.CompetitionDetailsVm

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div class="divRadius">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pozycja:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            Wynik:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Result)
        </dd>
        <dt class = "col-sm-2">
            Nazwa zawodów:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Miejscowość:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Kraj:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            Dystans:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Distance)
        </dd>
        <dt class = "col-sm-2">
            Data:
        </dt>
        <dd class = "col-sm-10">
            @Model.Date.ToString("dd-MM-yyyy")
        </dd>
        <dt class = "col-sm-2">
            Komentarz:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
</div>
</br>
<div>
    @Html.ActionLink("Edytuj", "Edit", new {  id = Model.Id  }, new {@class = "btn btn-warning" }) 
    <a class="btn btn-success" asp-action="Index">Wróć do listy</a>
</div>
