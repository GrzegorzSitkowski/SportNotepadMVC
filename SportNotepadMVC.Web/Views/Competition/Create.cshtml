@model SportNotepadMVC.Application.ViewModels.Competition.NewCompetitionVm

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj zawody</h1>

<hr />
<div class="divRadius">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Position" class="control-label">Miejsce</label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Result" class="control-label">Wynik</label>
                    <input asp-for="Result" class="form-control" />
                    <span asp-validation-for="Result" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label">Nazwa zawodów</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="City" class="control-label">Miejscowość</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Country" class="control-label">Kraj</label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Distance" class="control-label">Dystans</label>
                    </br>
                    <select name="Distance">
                        <option value="5,00">5 km</option>
                        <option value="10,00">10 km</option>
                        <option value="21,047">Półmaraton</option>
                        <option value="42,195">Maraton</option>
                    </select>
                    <span asp-validation-for="Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Date" class="control-label">Data</label>
                    <input asp-for="Date" type="date" value="dd-MM-yyyy" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Comment" class="control-label">Komentarz</label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</br>
<div>
    <a class="btn btn-success" asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
