@model SportNotepadMVC.Application.ViewModels.Training.TrainingDetailsVm

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Model.Date.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            Dystans
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Distance)
        </dd>
        <dt class = "col-sm-2">
            Wynik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Result)
        </dd>
        <dt class = "col-sm-2">
            Średnie tempo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AveragePace)
        </dd>
        <dt class = "col-sm-2">
            Miejsce
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
           Komentarz
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "Edit", new {  id = Model.Id  }, new {@class = "btn btn-warning" })
    <a class="btn btn-success" asp-action="Index">Wróć do listy</a>
</div>
