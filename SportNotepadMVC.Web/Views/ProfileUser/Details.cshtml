@model SportNotepadMVC.Application.ViewModels.ProfileUser.ProfileUserDisplayVm

@{
    ViewData["Title"] = "Details";
}

<h1>Profil</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Imię i nazwisko:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            Wiek:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            Waga:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class = "col-sm-2">
            Rekord na 5km:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pb5k)
        </dd>
        <dt class = "col-sm-2">
            Rekord na 10km:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pb10k)
        </dd>
        <dt class = "col-sm-2">
            Rekord w półmaratonie:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PbHalfMarathon)
        </dd>
        <dt class = "col-sm-2">
            Rekord w maratonie:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PbMarathon)
        </dd>
        <dt class = "col-sm-2">
            Łączna liczba zawodów:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountCompetitions)
        </dd>
    </dl>
</div>
